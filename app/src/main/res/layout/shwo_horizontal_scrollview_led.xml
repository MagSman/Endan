<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_text"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.my.xxx.mylibrary.EZLedView
            android:id="@+id/ledViewImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ledViewUp"
            android:layout_gravity="center"
            app:image="@drawable/simpson"
            app:led_color="@color/colorAccent"
            app:text_size="180dp" />

        <com.my.xxx.mylibrary.EZLedView
            android:id="@+id/ledViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ledViewUp"
            android:layout_gravity="center"
            app:led_color="@color/colorAccent"
            app:text=" "
            app:text_size="100sp" />

        <View
            android:id="@+id/down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</HorizontalScrollView>