<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--圆形头像图片自定义属性-->
    <!--civ_border_color圆环的颜色-->
    <!--civ_border_width圆环的宽度-->
    <!--civ_fill_color图片填充色，当图片有一定透明度时，才能看出效果-->
    <!--civ_border_overlay边线圆环是否覆盖-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="EZLedView">
        <attr name="led_radius" format="dimension" />
        <attr name="led_color" format="color" />
        <attr name="led_space" format="dimension" />
        <attr name="led_drawable" format="reference" />
        <attr name="led_type" format="enum">
            <enum name="circle" value="1" />
            <enum name="square" value="2" />
            <enum name="drawable" value="3" />
        </attr>
        <attr name="content_type">
            <enum name="text" value="1" />
            <enum name="image" value="2" />
        </attr>
        <attr name="image" format="reference" />
        <attr name="text" format="string" />
        <attr name="text_size" format="dimension" />
    </declare-styleable>
</resources>